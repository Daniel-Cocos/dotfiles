{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#176E8E",
          "template": " "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#308BA8",
          "properties": {
            "folder_icon": " ",
            "home_icon": " ",
            "max_depth": 3
          },
          "template": "{{ .Path }} "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#A86E87",
          "properties": {
            "branch_icon": " ",
            "fetch_status": false
          },
          "template": "{{ if .Branch }} {{ .Branch }}{{ if .IsDirty }} *{{ end }}{{ end }} "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#4C5C68",
          "template": "❯ "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#549CB4",
          "template": " {{ .CurrentDate | date \"15:04\" }}"
        }
      ]
    }
  ],
  "final_space": false
}

